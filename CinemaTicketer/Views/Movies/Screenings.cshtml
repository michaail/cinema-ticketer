@model CinemaTicketer.Models.Movie

@{
    ViewData["Title"] = "MovieScreenings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>MovieScreenings</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <img src="@Model.PosterUrl" alt="@Model.Name" />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cast)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cast)
        </dd>
        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PosterUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PosterUrl)
        </dd>*@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PremiereDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PremiereDate)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Screenings
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var screening in Model.Screenings)
            {
                <tr>
                    <td>
                    @{
                        string date = screening.Date.ToString("dd-MM-yyyy HH:mm");
                    }
                    @Html.DisplayFor(modelItem => date)
                    </td>
                    <td>
                        <a asp-controller="Reservations" asp-action="Create" asp-route-id="@screening.Id" >Book</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Back home</a>
</div>
