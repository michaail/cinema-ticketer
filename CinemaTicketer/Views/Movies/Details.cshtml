@model CinemaTicketer.Models.Movie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cast)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cast)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PosterUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosterUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotYetPremiered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NotYetPremiered)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsNew)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsNew)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Screenings
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var screening in Model.Screenings)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => screening.Date)
                    </td>
                    <td>
                        <a asp-controller="Screenings" asp-action="Edit" asp-route-id="@screening.Id">Edit</a> |
                        <a asp-controller="Screenings" asp-action="Delete" asp-route-id="@screening.Id">Delete</a> |
                        <a asp-controller="Screenings" asp-action="Create" asp-route-id="@Model.Id">Add screening</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-controller="Screenings" asp-action="Create" asp-route-id="@Model.Id">Add screenings</a>
</div>


